@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix iasis: <http://project-iasis.eu/vocab/>.


iasis:LCPatientShape
  a sh:NodeShape ;
  sh:closed "false"^^xsd:boolean ;

  sh:targetClass iasis:LCPatient ;
  sh:property [
    sh:path iasis:existenceOf_systemicProgression ;
  ];

  sh:property [
    sh:path iasis:hasDiagnosis ;
    sh:node iasis:DiagnosisShape ;
  ];
  sh:node iasis:rule_01 ;
  sh:node iasis:rule_02 ;
.

# if systemicProgression==True then TumorStage==IV
iasis:rule_01
    sh:or (
		[
		sh:not [
		    sh:property [
		    sh:path iasis:existenceOf_systemicProgression ;
		    sh:datatype xsd:string ;
			sh:hasValue "True" ;
		]]]
		[sh:property [
		    sh:path iasis:hasDiagnosis ;
		    sh:node iasis:diagnosis_testing_01;
            #sh:message " if systemicProgression==True then TumorStage==IV";
        ]]
        );
.

# if systemicProgression==False then TumorStage!=IV
iasis:rule_02
    sh:or (
		[
		sh:not [
		    sh:property [
		    sh:path iasis:existenceOf_systemicProgression ;
		    sh:datatype xsd:string ;
			sh:hasValue "False" ;
		]]]
		#[sh:node iasis:diagnosis_testing ;]
		[sh:property [
		    sh:path iasis:hasDiagnosis ;
		    sh:node iasis:diagnosis_testing_02 ;
            #sh:message "if systemicProgression==False then TumorStage!=IV";
        ]]
        );
.

iasis:DiagnosisShape
    a sh:NodeShape ;
    sh:property [
          sh:path iasis:hasDiagnosisTumorStage ;
          sh:node iasis:DiagnosisTumorShape ;
    ];
.

iasis:DiagnosisTumorShape
    a sh:NodeShape ;
      sh:property [
        sh:path iasis:tumorStageLabel ;
        sh:datatype xsd:string ;
      ];
.

iasis:diagnosis_testing_01
    a sh:NodeShape ;
    sh:property [
          sh:path iasis:hasDiagnosisTumorStage ;
          sh:property [
            sh:path iasis:tumorStageLabel ;
            sh:datatype xsd:string ;
            sh:hasValue "IV" ;
            sh:message "Error rule 01";
    ]];
.

iasis:diagnosis_testing_02
    a sh:NodeShape ;
    sh:property [
          sh:path iasis:hasDiagnosisTumorStage ;
          sh:property [
            sh:path iasis:tumorStageLabel ;
            sh:datatype xsd:string ;
            sh:in ("I" "II" "III") ;
            sh:message "Error rule 02";
    ]];
.

