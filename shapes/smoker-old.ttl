@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <http://datashapes.org/sh/tests/core/complex/example.test#> .
@prefix iasis: <http://project-iasis.eu/vocab/>.

<http://datashapes.org/sh/tests/core/complex/personexample.test>
  rdf:type owl:Ontology ;
  rdfs:label "Test example" ;
  owl:imports <http://datashapes.org/dash> ;
  owl:versionInfo "Version 1" ;
.

ex:Example
  a sh:NodeShape ;
  sh:closed "false"^^xsd:boolean ;
  sh:ignoredProperties (
      rdf:type
    ) ;

  sh:targetClass iasis:LCPatient ;
  sh:property [
    sh:path iasis:numberOfCigarettesPerYear;
    ];
  sh:property [
    sh:path iasis:smoking ;
  ];
  sh:or (
		[
		sh:not [
		    sh:property [
		    sh:path iasis:smoking ;
		    sh:datatype xsd:string ;
			sh:hasValue "current" ;
		]]]
		[sh:property [
			sh:path iasis:numberOfCigarettesPerYear ;
            sh:datatype xsd:string ;
            sh:pattern "^(?!0).*$" ;
            sh:maxCount 1 ;
            sh:message "Number of cigarettes greater than 0, max count 1";
        ]]
        );
  sh:or (
		[
		sh:not [
		    sh:property [
		    sh:path iasis:smoking ;
		    sh:datatype xsd:string ;
			sh:hasValue "former" ;
		]]]
		[sh:property [
			sh:path iasis:numberOfCigarettesPerYear ;
            sh:datatype xsd:string ;
            sh:pattern "^(?!0).*$" ;
            sh:maxCount 1 ;
            sh:message "Number of cigarettes greater than 0, max count 1";
        ]]
        );
  sh:or (
		[
		sh:not [
		    sh:property [
		    sh:path iasis:smoking ;
		    sh:datatype xsd:string ;
			sh:hasValue "no" ;
		]]]
		[sh:property [
			sh:path iasis:numberOfCigarettesPerYear ;
            sh:datatype xsd:string ;
            sh:pattern "^(0).*$" ;
            sh:maxCount 1 ;
            sh:message "Number of cigarettes greater than 0, max count 1";
        ]]
        )
.