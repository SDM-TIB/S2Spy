@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix iasis: <http://project-iasis.eu/vocab/>.

<http://project-iasis.eu/vocab/>
  rdf:type owl:Ontology ;
  rdfs:label "Test smoker" ;
  owl:imports <http://datashapes.org/dash> ;
  owl:versionInfo "Version 1" ;
.

iasis:SmokerShape
  a sh:NodeShape ;
  sh:closed "false"^^xsd:boolean ;

  sh:targetClass iasis:LCPatient ;

  sh:property [
    sh:path iasis:numberOfCigarettesPerYear;
  ];

  sh:property [
    sh:path iasis:smoking ;
  ];

  sh:or (
    [
      sh:property [
        sh:path iasis:smoking ;
        sh:datatype xsd:string ;
        sh:or (
          [
            sh:hasValue "current" ;
          ]
          [
            sh:hasValue "former" ;
          ]
        ) ;
      ] ;
      sh:property [
        sh:path iasis:numberOfCigarettesPerYear ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        sh:pattern "^(?!0).*$" ;
      ] ;
      sh:message "If smoking equals 'current' or 'former', then number of cigarettes is greater than 0, max count 1" ;
    ]

    [
      sh:property [
        sh:path iasis:smoking ;
        sh:datatype xsd:string ;
        sh:hasValue "no" ;
      ] ;
      sh:property [
        sh:path iasis:numberOfCigarettesPerYear ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        sh:pattern "^(0).*$" ;
      ] ;
      sh:message "If smoking equals 'no', then number of cigarettes is 0, max count 1" ;
    ]
  ) ;
  sh:message "Condition in sh:or violated" ;
.