@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <http://datashapes.org/sh/tests/core/complex/example.test#> .
@prefix iasis: <http://project-iasis.eu/vocab/>.
@prefix diag: <http://project-iasis.eu/Diagnosis/> .
@prefix ns2: <http://project-iasis.eu/TumorStage/> .


ex:LCPatient
  a sh:NodeShape ;
  sh:closed "false"^^xsd:boolean ;
  sh:ignoredProperties (
      rdf:type
    ) ;

  sh:targetClass iasis:LCPatient ;
  sh:property [
    sh:path iasis:existenceOf_brainMetastasis ;
  ];
   sh:property [
    sh:path iasis:hasDiagnosis ;
    sh:node ex:diagnosisShape ;
  ];
  sh:node ex:rule_01 ;
 .

# if brainMetastasis==True then TumorStage==IV
ex:rule_01
    sh:or (
		[
		sh:not [
		sh:property [
		    sh:path iasis:existenceOf_brainMetastasis ;
		    sh:datatype xsd:string ;
			sh:hasValue "True" ;

		]]]
		[sh:property [
		    sh:path iasis:hasDiagnosis ;
		    sh:node ex:diagnosis_testing_01;
		    sh:message "if brainMetastasis==True then TumorStage==IV";
        ]]
        );
    .



ex:diagnosisShape
    a sh:NodeShape ;
    sh:property [
          sh:path iasis:hasDiagnosisTumorStage ;
          sh:node ex:diagnosisTumorShape ;
    ];
.

ex:diagnosisTumorShape
    a sh:NodeShape ;
      sh:property [
        sh:path iasis:tumorStageLabel ;
        sh:datatype xsd:string ;
      ];
.

ex:diagnosis_testing_01
    a sh:NodeShape ;
    sh:property [
          sh:path iasis:hasDiagnosisTumorStage ;
          sh:property [
            sh:path iasis:tumorStageLabel ;
            sh:datatype xsd:string ;
            sh:hasValue "IV" ;
    ]];
.
